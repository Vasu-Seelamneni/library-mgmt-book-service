apiVersion: apps/v1
kind: Deployment
metadata:
  name: bookservice-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: bookservice
  template:
    metadata:
      labels:
        app: bookservice
    spec:
      volumes:
        - name: bookservice-config-volume
      containers:
        - name: bookservice
          image: bookservice:latest
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: bookservice-service
spec:
  selector:
    app: bookservice
  ports:
    - protocol: TCP
      port: 8081
      targetPort: 8080
